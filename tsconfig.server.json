{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "server-dist",
    "rootDir": "server",
    "declaration": false,
    "sourceMap": false
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
